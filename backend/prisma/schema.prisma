generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id @default(cuid())
  name         String
  lastName     String
  email        String        @unique
  password     String?
  provider     String?
  googleId     String?       @unique
  image        String?
  phoneNumber  String?       @unique
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
  categories   Category[] // Categorías personalizadas del usuario

  @@map("users")
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum TransactionOrigin {
  WEB
  WHATSAPP
}

model Transaction {
  id     String          @id @default(cuid())
  amount Decimal         @db.Decimal(12, 2)
  type   TransactionType
  userId String

  categoryId  String
  description String?
  origin      TransactionOrigin
  date        DateTime
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  user     User     @relation(fields: [userId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  @@index([userId, date])
  @@index([userId, categoryId])
  @@index([userId, type])
  @@map("transactions")
}

model Category {
  id        String          @id @default(cuid())
  name      String
  type      TransactionType
  icon      String?
  color     String? // Color para el dashboard (ej: "#FF5733")
  isDefault Boolean         @default(false) // true = categoría del sistema
  userId    String? // null = categoría global, valor = categoría personalizada
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  transactions Transaction[]
  user         User?         @relation(fields: [userId], references: [id])

  @@map("categories")
}
